---
interface Work {
  image: string;
  title: string;
  category: string;
}

// Placeholder para as imagens - você pode substituir depois
const works: Work[] = [
  { image: '/images/placeholder-1.jpg', title: 'Portão Industrial', category: 'Portões' },
  { image: '/images/placeholder-2.jpg', title: 'Estrutura Metálica', category: 'Estruturas' },
  { image: '/images/placeholder-3.jpg', title: 'Guarda-Corpo', category: 'Acabamentos' },
  { image: '/images/placeholder-4.jpg', title: 'Grade de Proteção', category: 'Segurança' },
  { image: '/images/placeholder-5.jpg', title: 'Portão Basculante', category: 'Portões' },
  { image: '/images/placeholder-6.jpg', title: 'Escada Metálica', category: 'Estruturas' },
  { image: '/images/placeholder-7.jpg', title: 'Corrimão', category: 'Acabamentos' },
  { image: '/images/placeholder-8.jpg', title: 'Portão Residencial', category: 'Portões' },
  { image: '/images/placeholder-9.jpg', title: 'Cobertura Metálica', category: 'Estruturas' },
];
---

<section id="trabalhos" class="py-20 px-6 bg-gradient-to-b from-charcoal to-industrial-gray">
  <div class="max-w-7xl mx-auto">
    <div class="text-center mb-16">
      <h2 class="text-5xl md:text-6xl font-display font-bold text-white mb-4">
        Nossos <span class="text-safety-orange">Trabalhos</span>
      </h2>
      <p class="text-xl text-gray-400 max-w-2xl mx-auto">
        30 anos de excelência em metalurgia. Cada projeto é único, cada detalhe importa.
      </p>
    </div>

    <!-- Masonry Grid -->
    <div class="masonry-grid">
      {works.map((work) => (
        <div class="masonry-item group">
          <div class="relative overflow-hidden rounded-lg shadow-2xl">
            <!-- Placeholder Image with gradient background -->
            <div class="aspect-[4/3] bg-gradient-to-br from-steel to-petrol-blue flex items-center justify-center">
              <span class="text-gray-500 text-sm">Imagem: {work.title}</span>
            </div>
            
            <!-- Hover Overlay -->
            <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-black/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex flex-col justify-end p-6">
              <p class="text-safety-orange text-sm font-semibold tracking-wider uppercase mb-1">
                {work.category}
              </p>
              <h3 class="text-white text-2xl font-display font-bold">
                {work.title}
              </h3>
            </div>

            <!-- Zoom effect -->
            <div class="absolute inset-0 transition-transform duration-500 group-hover:scale-110"></div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .masonry-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1.5rem;
    grid-auto-rows: 250px;
  }

  .masonry-item:nth-child(3n + 1) {
    grid-row: span 1;
  }

  .masonry-item:nth-child(3n + 2) {
    grid-row: span 2;
  }

  .masonry-item:nth-child(3n + 3) {
    grid-row: span 1;
  }

  .masonry-item > div {
    height: 100%;
  }

  .masonry-item > div > div:first-child {
    height: 100%;
  }

  @media (max-width: 768px) {
    .masonry-grid {
      grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
      grid-auto-rows: 200px;
    }
  }
</style>
