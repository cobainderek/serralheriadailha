---
// src/pages/index.astro
import { getAssetUrl } from "../utils/assets";
---

<html lang="pt-br">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <meta
            name="description"
            content="Serralheria da Ilha - 30 anos de excelência em estruturas metálicas, portões, grades e serralheria de alto padrão em Vitória/ES"
        />
        <title>Serralheria da Ilha - 30 Anos de Excelência em Aço</title>

        <!-- Fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Oswald:wght@400;500;600;700&family=Inter:wght@300;400;500;600;700&display=swap"
            rel="stylesheet"
        />

        <style>
            /* Animações customizadas */
            @keyframes fadeInUp {
                from {
                    opacity: 0;
                    transform: translateY(40px);
                }
                to {
                    opacity: 1;
                    transform: translateY(0);
                }
            }

            @keyframes fadeIn {
                from {
                    opacity: 0;
                }
                to {
                    opacity: 1;
                }
            }

            @keyframes scaleIn {
                from {
                    opacity: 0;
                    transform: scale(0.8);
                }
                to {
                    opacity: 1;
                    transform: scale(1);
                }
            }

            @keyframes float {
                0%,
                100% {
                    transform: translateY(0px);
                }
                50% {
                    transform: translateY(-10px);
                }
            }

            @keyframes pulse-glow {
                0%,
                100% {
                    box-shadow: 0 0 20px rgba(194, 139, 87, 0.3);
                }
                50% {
                    box-shadow: 0 0 40px rgba(194, 139, 87, 0.5);
                }
            }

            .animate-fade-in-up {
                animation: fadeInUp 1s ease-out forwards;
            }

            .animate-fade-in {
                animation: fadeIn 1.5s ease-out forwards;
            }

            .animate-scale-in {
                animation: scaleIn 1s ease-out forwards;
            }

            .animate-float {
                animation: float 3s ease-in-out infinite;
            }

            .animate-pulse-glow {
                animation: pulse-glow 2s ease-in-out infinite;
            }

            .delay-100 {
                animation-delay: 0.1s;
            }
            .delay-200 {
                animation-delay: 0.2s;
            }
            .delay-300 {
                animation-delay: 0.3s;
            }
            .delay-400 {
                animation-delay: 0.4s;
            }
            .delay-500 {
                animation-delay: 0.5s;
            }
            .delay-700 {
                animation-delay: 0.7s;
            }
            .delay-1000 {
                animation-delay: 1s;
            }

            /* Scroll suave */
            html {
                scroll-behavior: smooth;
            }

            /* Efeito glassmorphism na navbar */
            .glass {
                background: rgba(250, 248, 245, 0.85);
                backdrop-filter: blur(12px);
                -webkit-backdrop-filter: blur(12px);
            }

            .glass-dark {
                background: rgba(55, 48, 42, 0.9);
                backdrop-filter: blur(12px);
                -webkit-backdrop-filter: blur(12px);
            }

            /* Gradiente de texto */
            .text-gradient {
                background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                background-clip: text;
            }

            /* Cor primária suave (bronze/cobre) */
            .bg-primary {
                background-color: #3b82f6;
            }
            .bg-primary-dark {
                background-color: #2563eb;
            }
            .text-primary {
                color: #3b82f6;
            }
            .border-primary {
                border-color: #3b82f6;
            }
        </style>
    </head>

    <body
        class="bg-stone-50 text-stone-700 font-['Inter'] antialiased selection:bg-blue-200 selection:text-stone-900 overflow-x-hidden"
    >
        <!-- Navbar -->
        <nav
            class="fixed w-full z-50 top-0 left-0 bg-white/95 backdrop-blur-md border-b border-stone-200/50 shadow-sm"
        >
            <div
                class="max-w-7xl mx-auto px-6 h-16 flex items-center justify-between"
            >
                <!-- Logo/Nome -->
                <a href="/" class="group flex items-center gap-2">
                    <div
                        class="w-10 h-10 bg-gradient-to-br from-blue-500 to-blue-700 rounded-lg flex items-center justify-center shadow-md group-hover:shadow-lg transition-shadow"
                    >
                        <svg
                            class="w-6 h-6 text-white"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"
                            ></path>
                        </svg>
                    </div>
                    <div class="flex flex-col">
                        <span
                            class="text-lg font-['Oswald'] font-bold tracking-wide text-stone-800 leading-tight"
                            >SERRALHERIA</span
                        >
                        <span
                            class="text-xs font-semibold tracking-widest text-blue-600"
                            >DA ILHA</span
                        >
                    </div>
                </a>

                <!-- Menu Desktop -->
                <div
                    class="hidden md:flex items-center gap-8 text-sm font-medium text-stone-600"
                >
                    <a
                        href="#servicos"
                        class="hover:text-stone-900 transition-colors relative group"
                    >
                        Serviços
                        <span
                            class="absolute -bottom-1 left-0 w-0 h-0.5 bg-blue-600 group-hover:w-full transition-all"
                        ></span>
                    </a>
                    <a
                        href="#projetos"
                        class="hover:text-stone-900 transition-colors relative group"
                    >
                        Projetos
                        <span
                            class="absolute -bottom-1 left-0 w-0 h-0.5 bg-blue-600 group-hover:w-full transition-all"
                        ></span>
                    </a>
                    <a
                        href="#sobre"
                        class="hover:text-stone-900 transition-colors relative group"
                    >
                        Sobre Nós
                        <span
                            class="absolute -bottom-1 left-0 w-0 h-0.5 bg-blue-600 group-hover:w-full transition-all"
                        ></span>
                    </a>
                </div>

                <!-- CTA -->
                <a
                    href="https://wa.me/27999678125"
                    class="group flex items-center gap-2 px-5 py-2.5 bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 text-white text-sm font-bold rounded-lg transition-all shadow-md hover:shadow-lg"
                >
                    <svg
                        class="w-4 h-4"
                        fill="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"
                        ></path>
                    </svg>
                    <span class="hidden sm:inline">Orçamento</span>
                </a>
            </div>
        </nav>

        <!-- HERO SECTION - Principal -->
        <section
            class="relative min-h-[600px] h-[70vh] md:h-[80vh] lg:h-[85vh] w-full flex items-center justify-center overflow-hidden"
        >
            <!-- Vídeo de Fundo - Soldador Trabalhando -->
            <div class="absolute inset-0 z-0">
                <video
                    autoplay
                    loop
                    muted
                    playsinline
                    class="w-full h-full object-cover"
                >
                    <source
                        src={getAssetUrl("images/hero-video.mp4")}
                        type="video/mp4"
                    />
                </video>

                <!-- Overlay mais leve para maior nitidez -->
                <div
                    class="absolute inset-0 bg-gradient-to-r from-stone-900/60 via-stone-900/30 to-transparent"
                >
                </div>
                <div
                    class="absolute inset-0 bg-gradient-to-t from-stone-900/70 via-transparent to-transparent"
                >
                </div>
            </div>

            <!-- Conteúdo Principal do Hero -->
            <div
                class="relative z-10 w-full px-4 sm:px-6 md:px-12 lg:px-24 pt-24 md:pt-28 lg:pt-32 pb-12 md:pb-16 lg:pb-20 flex items-center justify-start h-full"
            >
                <!-- Conteúdo Alinhado à Esquerda -->
                <div class="text-left max-w-4xl mt-8">
                    <!-- Título Principal -->
                    <h1
                        class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl xl:text-7xl font-['Oswald'] font-bold text-white leading-[1.15] mb-4 md:mb-6 animate-fade-in-up opacity-0 delay-200"
                    >
                        Transformando
                        <span
                            class="block text-transparent bg-clip-text bg-gradient-to-r from-blue-400 via-blue-500 to-blue-600"
                            >Aço em Arte</span
                        >
                    </h1>

                    <!-- Subtítulo -->
                    <p
                        class="text-base sm:text-lg md:text-xl lg:text-2xl text-stone-200 max-w-3xl mb-8 md:mb-12 leading-relaxed animate-fade-in-up opacity-0 delay-300"
                    >
                        Especialistas em estruturas metálicas, portões, grades e
                        serralheria de alto padrão.
                        <span class="block mt-2 text-blue-300 font-semibold"
                            >Qualidade e precisão em cada solda.</span
                        >
                    </p>

                    <!-- CTAs -->
                    <div
                        class="flex flex-col sm:flex-row gap-3 md:gap-4 justify-start animate-fade-in-up opacity-0 delay-400"
                    >
                        <a
                            href="#orcamento"
                            class="group inline-flex items-center justify-center gap-2 md:gap-3 px-6 md:px-8 py-3 md:py-4 bg-gradient-to-r from-blue-500 to-blue-600 hover:from-blue-600 hover:to-blue-700 text-white text-sm md:text-base font-bold rounded-lg transition-all shadow-xl shadow-blue-900/30 hover:shadow-blue-900/50 hover:-translate-y-1"
                        >
                            <svg
                                class="w-4 h-4 md:w-5 md:h-5"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"
                                ></path>
                            </svg>
                            Solicitar Orçamento
                        </a>
                        <a
                            href="#projetos"
                            class="group inline-flex items-center justify-center gap-2 px-6 md:px-8 py-3 md:py-4 border-2 border-white/30 hover:border-blue-400/60 hover:bg-blue-400/10 text-white text-sm md:text-base font-semibold rounded-lg transition-all"
                        >
                            Ver Projetos
                            <svg
                                class="w-4 h-4 group-hover:translate-x-1 transition-transform"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                            </svg>
                        </a>
                    </div>

                    <!-- Stats - apenas anos de mercado -->
                    <div
                        class="flex items-center justify-start gap-6 mt-16 pt-12 border-t border-white/10 animate-fade-in-up opacity-0 delay-500"
                    >
                        <div
                            class="text-5xl md:text-6xl font-['Oswald'] font-bold text-blue-400"
                        >
                            30+
                        </div>
                        <div class="text-lg text-stone-300 text-left">
                            Anos de experiência<br />
                            <span class="text-stone-400 text-sm"
                                >transformando aço em soluções</span
                            >
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- SEÇÃO DE SERVIÇOS -->
        <section id="servicos" class="py-24 bg-stone-100">
            <div class="max-w-7xl mx-auto px-6">
                <!-- Header da Seção -->
                <div class="text-center mb-16">
                    <span
                        class="text-blue-600 text-sm font-semibold tracking-widest uppercase"
                        >O que fazemos</span
                    >
                    <h2
                        class="text-3xl md:text-5xl font-['Oswald'] font-bold text-stone-800 mt-4"
                    >
                        Nossos Serviços
                    </h2>
                    <div
                        class="w-20 h-1 bg-gradient-to-r from-blue-500 to-blue-600 mx-auto mt-6"
                    >
                    </div>
                </div>

                <!-- Grid de Serviços -->
                <div
                    class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6"
                >
                    <!-- Serviço 1 - Portões -->
                    <div
                        class="group bg-white rounded-2xl overflow-hidden shadow-md hover:shadow-xl transition-all duration-300 hover:-translate-y-2"
                    >
                        <div class="relative h-48 overflow-hidden">
                            <img
                                src={getAssetUrl("images/servicos-portao.jpg")}
                                alt="Portões Automatizados"
                                class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                            />
                            <div
                                class="absolute inset-0 bg-gradient-to-t from-stone-900/70 to-transparent"
                            >
                            </div>
                        </div>
                        <div class="p-5">
                            <h3 class="text-lg font-bold text-stone-800 mb-2">
                                Portões Automatizados
                            </h3>
                            <p class="text-stone-500 text-sm leading-relaxed">
                                Basculantes, deslizantes e pivotantes com
                                automação de qualidade.
                            </p>
                        </div>
                    </div>

                    <!-- Serviço 2 - Estruturas -->
                    <div
                        class="group bg-white rounded-2xl overflow-hidden shadow-md hover:shadow-xl transition-all duration-300 hover:-translate-y-2"
                    >
                        <div class="relative h-48 overflow-hidden">
                            <img
                                src={getAssetUrl(
                                    "images/servicos-estrutura.jpg",
                                )}
                                alt="Estruturas Metálicas"
                                class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                            />
                            <div
                                class="absolute inset-0 bg-gradient-to-t from-stone-900/70 to-transparent"
                            >
                            </div>
                        </div>
                        <div class="p-5">
                            <h3 class="text-lg font-bold text-stone-800 mb-2">
                                Estruturas Metálicas
                            </h3>
                            <p class="text-stone-500 text-sm leading-relaxed">
                                Galpões, mezaninos e coberturas sob medida.
                            </p>
                        </div>
                    </div>

                    <!-- Serviço 3 - Grades -->
                    <div
                        class="group bg-white rounded-2xl overflow-hidden shadow-md hover:shadow-xl transition-all duration-300 hover:-translate-y-2"
                    >
                        <div class="relative h-48 overflow-hidden">
                            <img
                                src={getAssetUrl("images/servicos-grade.jpg")}
                                alt="Grades de Segurança"
                                class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                            />
                            <div
                                class="absolute inset-0 bg-gradient-to-t from-stone-900/70 to-transparent"
                            >
                            </div>
                        </div>
                        <div class="p-5">
                            <h3 class="text-lg font-bold text-stone-800 mb-2">
                                Grades de Segurança
                            </h3>
                            <p class="text-stone-500 text-sm leading-relaxed">
                                Grades e proteções com design moderno.
                            </p>
                        </div>
                    </div>

                    <!-- Serviço 4 - Acabamentos -->
                    <div
                        class="group bg-white rounded-2xl overflow-hidden shadow-md hover:shadow-xl transition-all duration-300 hover:-translate-y-2"
                    >
                        <div class="relative h-48 overflow-hidden">
                            <img
                                src={getAssetUrl(
                                    "images/servicos-acabamento.jpg",
                                )}
                                alt="Acabamentos Finos"
                                class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                            />
                            <div
                                class="absolute inset-0 bg-gradient-to-t from-stone-900/70 to-transparent"
                            >
                            </div>
                        </div>
                        <div class="p-5">
                            <h3 class="text-lg font-bold text-stone-800 mb-2">
                                Acabamentos Finos
                            </h3>
                            <p class="text-stone-500 text-sm leading-relaxed">
                                Corrimãos, guarda-corpos e escadas em aço.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- SEÇÃO DE PROJETOS -->
        <section id="projetos" class="py-24 bg-stone-50">
            <div class="max-w-7xl mx-auto px-6">
                <!-- Header da Seção -->
                <div class="text-center mb-12">
                    <span
                        class="text-blue-600 text-sm font-semibold tracking-widest uppercase"
                        >Portfólio</span
                    >
                    <h2
                        class="text-3xl md:text-5xl font-['Oswald'] font-bold text-stone-800 mt-4"
                    >
                        Trabalhos Realizados
                    </h2>
                    <div
                        class="w-20 h-1 bg-gradient-to-r from-blue-500 to-blue-600 mx-auto mt-6"
                    >
                    </div>
                </div>

                <!-- Carrossel de Projetos -->
                <div class="relative">
                    <!-- Container do Carrossel -->
                    <div class="overflow-hidden" id="carousel-container">
                        <div
                            class="flex"
                            id="carousel-track"
                            style="transition: transform 0.5s ease-out;"
                        >
                            <!-- Projeto 1 - Estrutura Metálica -->
                            <div
                                class="carousel-slide flex-shrink-0 w-full md:w-1/2 lg:w-1/3 px-3"
                                data-src={getAssetUrl("images/portfolio/1.jpg")}
                                data-title="Estrutura Metálica"
                            >
                                <div
                                    class="group relative aspect-[4/5] overflow-hidden rounded-2xl cursor-pointer shadow-md"
                                    onclick="openLightbox('/images/portfolio/1.jpg', 'Estrutura Metálica')"
                                >
                                    <img
                                        src={getAssetUrl(
                                            "images/portfolio/1.jpg",
                                        )}
                                        class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
                                        alt="Estrutura Metálica"
                                    />
                                    <div
                                        class="absolute inset-0 bg-gradient-to-t from-stone-900 via-stone-900/20 to-transparent opacity-60 group-hover:opacity-80 transition-opacity"
                                    >
                                    </div>
                                    <div
                                        class="absolute bottom-0 left-0 right-0 p-6"
                                    >
                                        <span
                                            class="inline-block px-3 py-1 bg-blue-500 text-white text-xs font-bold rounded-full mb-3"
                                        >
                                            Estruturas
                                        </span>
                                        <h3
                                            class="text-xl font-bold text-white"
                                        >
                                            Estrutura Metálica
                                        </h3>
                                    </div>
                                    <!-- Ícone de zoom -->
                                    <div
                                        class="absolute top-4 right-4 w-10 h-10 bg-white/90 rounded-full flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity"
                                    >
                                        <svg
                                            class="w-5 h-5 text-stone-700"
                                            fill="none"
                                            stroke="currentColor"
                                            viewBox="0 0 24 24"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v3m0 0v3m0-3h3m-3 0H7"
                                            ></path>
                                        </svg>
                                    </div>
                                </div>
                            </div>

                            <!-- Projeto 2 - Escada -->
                            <div
                                class="carousel-slide flex-shrink-0 w-full md:w-1/2 lg:w-1/3 px-3"
                                data-src={getAssetUrl("images/portfolio/2.jpg")}
                                data-title="Escada Metálica"
                            >
                                <div
                                    class="group relative aspect-[4/5] overflow-hidden rounded-2xl cursor-pointer shadow-md"
                                    onclick="openLightbox('/images/portfolio/2.jpg', 'Escada Metálica')"
                                >
                                    <img
                                        src={getAssetUrl(
                                            "images/portfolio/2.jpg",
                                        )}
                                        class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
                                        alt="Escada Metálica"
                                    />
                                    <div
                                        class="absolute inset-0 bg-gradient-to-t from-stone-900 via-stone-900/20 to-transparent opacity-60 group-hover:opacity-80 transition-opacity"
                                    >
                                    </div>
                                    <div
                                        class="absolute bottom-0 left-0 right-0 p-6"
                                    >
                                        <span
                                            class="inline-block px-3 py-1 bg-blue-500 text-white text-xs font-bold rounded-full mb-3"
                                        >
                                            Escadas
                                        </span>
                                        <h3
                                            class="text-xl font-bold text-white"
                                        >
                                            Escada Metálica
                                        </h3>
                                    </div>
                                    <div
                                        class="absolute top-4 right-4 w-10 h-10 bg-white/90 rounded-full flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity"
                                    >
                                        <svg
                                            class="w-5 h-5 text-stone-700"
                                            fill="none"
                                            stroke="currentColor"
                                            viewBox="0 0 24 24"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v3m0 0v3m0-3h3m-3 0H7"
                                            ></path>
                                        </svg>
                                    </div>
                                </div>
