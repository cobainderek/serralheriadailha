        <script>
            // Dados das imagens para o lightbox
            const portfolioImages = [
                { src: "/images/portfolio/1.jpg", title: "Estrutura Metálica" },
                { src: "/images/portfolio/2.jpg", title: "Escada Metálica" },
                { src: "/images/portfolio/3.jpg", title: "Guarda Corpo" },
                { src: "/images/portfolio/4.jpg", title: "Guarda Corpo" },
                { src: "/images/portfolio/5.jpg", title: "Escada Metálica" },
                { src: "/images/portfolio/6.jpg", title: "Telhado Metálico" },
            ];

            let currentLightboxIndex = 0;

            // Função para abrir o lightbox
            function openLightbox(src, title) {
                const lightbox = document.getElementById("lightbox");
                const lightboxImg = document.getElementById("lightbox-img");
                const lightboxTitle = document.getElementById("lightbox-title");

                // Encontra o índice da imagem atual
                currentLightboxIndex = portfolioImages.findIndex(
                    (img) => img.src === src,
                );

                lightboxImg.src = src;
                lightboxImg.alt = title;
                lightboxTitle.textContent = title;
                lightbox.classList.remove("hidden");
                lightbox.classList.add("flex");
                document.body.style.overflow = "hidden";
            }

            // Função para fechar o lightbox
            function closeLightbox() {
                const lightbox = document.getElementById("lightbox");
                lightbox.classList.add("hidden");
                lightbox.classList.remove("flex");
                document.body.style.overflow = "";
            }

            // Navegação do lightbox
            function lightboxPrev() {
                currentLightboxIndex =
                    (currentLightboxIndex - 1 + portfolioImages.length) %
                    portfolioImages.length;
                updateLightboxImage();
            }

            function lightboxNext() {
                currentLightboxIndex =
                    (currentLightboxIndex + 1) % portfolioImages.length;
                updateLightboxImage();
            }

            function updateLightboxImage() {
                const lightboxImg = document.getElementById("lightbox-img");
                const lightboxTitle = document.getElementById("lightbox-title");
                const img = portfolioImages[currentLightboxIndex];
                lightboxImg.src = img.src;
                lightboxImg.alt = img.title;
                lightboxTitle.textContent = img.title;
            }

            document.addEventListener("DOMContentLoaded", () => {
                // === LIGHTBOX ===
                const lightbox = document.getElementById("lightbox");
                const lightboxClose = document.getElementById("lightbox-close");
                const lightboxPrevBtn =
                    document.getElementById("lightbox-prev");
                const lightboxNextBtn =
                    document.getElementById("lightbox-next");

                lightboxClose.addEventListener("click", closeLightbox);
                lightboxPrevBtn.addEventListener("click", lightboxPrev);
                lightboxNextBtn.addEventListener("click", lightboxNext);

                // Fechar com ESC ou clicando fora
                lightbox.addEventListener("click", (e) => {
                    if (e.target === lightbox) closeLightbox();
                });
                document.addEventListener("keydown", (e) => {
                    if (!lightbox.classList.contains("hidden")) {
                        if (e.key === "Escape") closeLightbox();
                        if (e.key === "ArrowLeft") lightboxPrev();
                        if (e.key === "ArrowRight") lightboxNext();
                    }
                });

                // === CARROSSEL INFINITO ===
                const track = document.getElementById("carousel-track");
                const originalSlides = Array.from(
                    document.querySelectorAll(".carousel-slide"),
                );
                const prevBtn = document.getElementById("carousel-prev");
                const nextBtn = document.getElementById("carousel-next");
                const dots = document.querySelectorAll(".carousel-dot");

                const totalOriginalSlides = originalSlides.length;
                let currentIndex = 0;

                function getSlidesPerView() {
                    if (window.innerWidth >= 1024) return 3;
                    if (window.innerWidth >= 768) return 2;
                    return 1;
                }

                // Clona slides para criar efeito infinito
                function setupInfiniteCarousel() {
                    const slidesPerView = getSlidesPerView();

                    // Remove clones existentes
                    track
                        .querySelectorAll(".clone")
                        .forEach((clone) => clone.remove());

                    // Clona os primeiros slides e adiciona no final
                    for (let i = 0; i < slidesPerView; i++) {
                        const clone = originalSlides[i].cloneNode(true);
                        clone.classList.add("clone");

                        // Adiciona evento de click ao clone
                        const cloneCard = clone.querySelector("[onclick]");
                        if (cloneCard) {
                            const src = clone.getAttribute("data-src");
                            const title = clone.getAttribute("data-title");
                            cloneCard.removeAttribute("onclick");
                            cloneCard.addEventListener("click", () =>
                                openLightbox(src, title),
                            );
                        }

                        track.appendChild(clone);
                    }

                    // Clona os últimos slides e adiciona no início
                    for (
                        let i = totalOriginalSlides - 1;
                        i >= totalOriginalSlides - slidesPerView;
                        i--
                    ) {
                        const clone = originalSlides[i].cloneNode(true);
                        clone.classList.add("clone");

                        // Adiciona evento de click ao clone
                        const cloneCard = clone.querySelector("[onclick]");
                        if (cloneCard) {
                            const src = clone.getAttribute("data-src");
                            const title = clone.getAttribute("data-title");
                            cloneCard.removeAttribute("onclick");
                            cloneCard.addEventListener("click", () =>
                                openLightbox(src, title),
                            );
                        }

                        track.insertBefore(clone, track.firstChild);
                    }
                }

                function getSlideWidth() {
                    const slidesPerView = getSlidesPerView();
                    return 100 / slidesPerView;
                }

                function updateCarousel(animate = true) {
                    const slidesPerView = getSlidesPerView();
                    const slideWidth = getSlideWidth();
                    const offset = (currentIndex + slidesPerView) * slideWidth;

                    track.style.transition = animate
                        ? "transform 0.5s ease-out"
                        : "none";
                    track.style.transform = `translateX(-${offset}%)`;

                    // Atualiza dots
                    const dotIndex =
                        ((currentIndex % totalOriginalSlides) +
                            totalOriginalSlides) %
                        totalOriginalSlides;
                    dots.forEach((dot, index) => {
                        if (index === dotIndex) {
                            dot.classList.remove("bg-stone-300");
                            dot.classList.add("bg-blue-500");
                        } else {
                            dot.classList.remove("bg-blue-500");
                            dot.classList.add("bg-stone-300");
                        }
                    });
                }

                function nextSlide() {
                    currentIndex++;
                    updateCarousel();

                    // Reset para criar loop infinito
                    if (currentIndex >= totalOriginalSlides) {
                        setTimeout(() => {
                            currentIndex = 0;
                            updateCarousel(false);
                        }, 500);
                    }
                }

                function prevSlide() {
                    currentIndex--;
                    updateCarousel();

                    // Reset para criar loop infinito
                    if (currentIndex < 0) {
                        setTimeout(() => {
                            currentIndex = totalOriginalSlides - 1;
                            updateCarousel(false);
                        }, 500);
                    }
                }

                // Event listeners
                nextBtn.addEventListener("click", nextSlide);
                prevBtn.addEventListener("click", prevSlide);

                dots.forEach((dot, index) => {
                    dot.addEventListener("click", () => {
                        currentIndex = index;
                        updateCarousel();
                    });
                });

                // Setup inicial
                setupInfiniteCarousel();
                updateCarousel(false);

                // Reconfigura ao redimensionar
                window.addEventListener("resize", () => {
                    setupInfiniteCarousel();
                    updateCarousel(false);
                });
            });
        </script>

